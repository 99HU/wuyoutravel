<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UpdatePhotographerOrderActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="摄影师信息："
            android:textColor="@color/black"
            android:textSize="23sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本次提供服务的摄影师："
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/update_photographer_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="冯小涛（山楂工作室）"
                android:textSize="23sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/update_photographer_order_image"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/update_photographer_order_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄：28"
                android:textSize="23sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/update_photographer_order_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别：男"
                android:textSize="23sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/update_photographer_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务过23位旅行者"
                android:textSize="23sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:background="#E0E0E0" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拍摄时间"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp" />
            <EditText
                android:layout_width="match_parent"
                android:text="2021-10-16(拍摄时间为08:00-06:00)"
                android:layout_height="wrap_content"
                android:id="@+id/update_photographer_order_time"
                android:inputType="none"
                android:focusable="false"
                android:textColor="#B8B8B8"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:background="#E0E0E0" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拍摄地点"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp" />
            <EditText
                android:layout_width="match_parent"
                android:hint="请输入您与摄影师约定好的地点"
                android:layout_height="wrap_content"
                android:id="@+id/update_photographer_order_loc"
                android:inputType="none"
                android:textColor="#B8B8B8"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:background="#E0E0E0" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拍摄需求"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="跟随拍摄一天早上8:00~下午6:00，不提供服装 "/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/update_photographer_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:text="308.0元"
                    android:textColor="#FF0000"
                    android:textSize="22sp" />
                <CheckBox
                    android:id="@+id/update_photographer_order_check"
                    android:layout_toRightOf="@+id/update_photographer_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="跟随拍摄一天早上8:00~下午6:00，提供服装 "/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/update_photographer_cloth_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:text="408.0元"
                    android:textColor="#FF0000"
                    android:textSize="22sp" />
                <CheckBox
                    android:id="@+id/update_photographer_cloth_order_check"
                    android:layout_toRightOf="@+id/update_photographer_cloth_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/small_notice"
                android:layout_marginTop="10dp"
                android:background="#E0E0E0" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付金额:"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="120dp"/>
                <TextView
                    android:id="@+id/update_photographer_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:text="0元"
                    android:textStyle="bold"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DCDCDC">

                <TextView
                    android:id="@id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消政策"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/update_photographer_cancel_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/title"
                    android:text="2021-10-15 24点前取消订单收取订单金额20%取消费，之后不可取消" />

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/update_photographer_cancel_time"
                    android:text="修改订单说明"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/update_photographer_cancel_time"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/title1"
                    android:text="1.本平台在修改订单时不允许更换摄影师，如果想要更换摄影师，请取消订单重新下单。\n2.在修改拍摄的场地和时间时请先和摄影师沟通后再修改。" />
                <TextView
                    android:layout_below="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\n\n"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center|bottom">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="我已阅读并遵守"
                        android:id="@+id/update_photographer_check"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/photographer_order_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《预订须知》"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        android:textColor="#EEEE00"
                        android:layout_toRightOf="@+id/check_rules"/>
                </LinearLayout>
                <Button
                    android:id="@+id/update_photographer_order_pay_button"
                    android:text="确认支付"
                    android:textSize="35sp"
                    android:layout_below="@+id/check_rules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>