<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/scenery_name"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="东方明珠电视塔"
            android:textColor="@color/black"
            android:textSize="20dp"/>
        <LinearLayout
            android:id="@+id/scenery_info"
            android:layout_below="@+id/scenery_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/scenery_level"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:text="5A级"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/scenery_district"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:text="浦东新区"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/scenery_opentime"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:text="09:00-21:00"
                android:textColor="@color/white"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/image_num"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/scenery_info"
            android:layout_width="400dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="400dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:background="@color/grey_7D7D7D" />
            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/green_image"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/green" />
            </RelativeLayout>
            <TextView
                android:id="@+id/now_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/fill_num"
                android:text="1229"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fill_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:text="人/15000人"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tt"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/image_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title1"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据更新时间"
                android:textSize="10sp"
                />

            <TextView
                android:id="@+id/update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/title1"
                android:text="2021-11-07 15:48:00"
                android:textSize="10sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前客流量/瞬时最大承载量"
                android:layout_alignParentRight="true"
                android:textSize="10sp"
                android:layout_marginRight="8dp"/>
        </RelativeLayout>
        <TextView
            android:layout_below="@+id/tt"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>