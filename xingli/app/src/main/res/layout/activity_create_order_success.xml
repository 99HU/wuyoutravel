<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.createOrderSuccess">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="预订完成"
        android:textColor="#FFFF00"
        android:textSize="40sp"
        android:layout_above="@+id/order_price"
        android:gravity="center"/>
    <TextView
        android:id="@+id/order_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_above="@+id/order_notice0"
        />
    <TextView
        android:id="@+id/order_notice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进入我的订单找到当前订单，即可查看关于订单的更多信息"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_above="@+id/goto_order"/>

    <TextView
        android:id="@+id/order_notice0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/goto_order"
        android:gravity="center"
        android:text="进入我的订单找到店铺，出示订单凭证既可寄存行李或取回行李"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <Button
        android:id="@+id/goto_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="前往我的订单"
        android:layout_centerInParent="true"/>
</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>